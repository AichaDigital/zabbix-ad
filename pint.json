{
    "preset": "laravel",
    "rules": {
        "single_quote": true,
        "trailing_comma_in_multiline": true,
        "no_unused_imports": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "method_chaining_indentation": true,
        "no_extra_blank_lines": {
            "tokens": [
                "extra",
                "throw",
                "use"
            ]
        }
    },
    "exclude": [
        "bootstrap/cache",
        "storage",
        "vendor",
        "node_modules"
    ]
}
